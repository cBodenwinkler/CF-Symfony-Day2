{% extends 'base.html.twig' %}

{% block title %}Home
{% endblock %}

{% block body %}
	{% include "carousel.html.twig" %}

	<div class="container my-4">
		<div class="row">
			{% for trip in trips %}
				<div class="card col-6 my-3 p-5" style="width: 18rem;">
					<img src={{trip.image}} class="card-img-top" alt="...">
					<div class="card-body">
						<h5 class="card-title">{{trip.name}}</h5>
						<p class="card-text">{{trip.description}}</p>
					</div>
					<ul class="list-group list-group-flush">
						<li class="list-group-item">Price:
							{{trip.price}}</li>
					</ul>
					<div class="card-body">
						<a href="/home/{{trip.id}}" class="card-link">Details</a>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>


{% endblock %}
